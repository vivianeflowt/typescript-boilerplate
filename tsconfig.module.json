{
    "extends": "./tsconfig",
    "compilerOptions": {
        "target": "esnext",
        "outDir": "build/module",
        "module": "esnext",
        "rootDir": "src",
        "incremental": false,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules/**",
        "src/cli/**/*.ts",
        "**/*.spec.ts",
        "**/dist",
        "**/src/__tests__",
        "**/test"
    ]
}