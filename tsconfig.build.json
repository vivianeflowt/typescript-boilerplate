{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "sourceMap": false
    },
    "include": [
        "src/**/*.ts",
        "../../typings/**/*.d.ts",
    ],
    "exclude": [
        "**__tests__/**",
        "**__mocks__/**",
        "**__fixtures__/**",
        "**/*.test.ts",
        "**/*.test.ts",
    ],
    "typedocOptions": {
        "entryPoints": [
            "src"
        ],
        "out": "docs"
    }
}