{
  "name": "typescript-boilerplate",
  "description": "A typescript boilerplate for building typescript libraries and projects",
  "version": "0.0.2",
  "license": "MIT",
  "bin": {
    "guru": "./bin/run"
  },
  "main": "build/main/index.js",
  "module": "build/module/index.js",
  "typings": "build/main/index.d.ts",
  "files": [
    "bin/",
    "src/",
    "dist/"
  ],
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "scripts": {
    "build": "redrun -p build:*",
    "build:bundle": "esbuild ./src/index.ts --bundle --platform=node --target=node12 --format=cjs --loader:.ts=ts --outfile=dist/bundle/bundle.min.js",
    "build:main": "tsc -p tsconfig.build.json",
    "build:module": "tsc -p tsconfig.module.json",
    "commit": "cz",
    "coverage": "jest --coverage --runInBand",
    "fix": "redrun -s fix:*",
    "fix:format": "prettier --write ./src/**/*.{js,mjs,cjs,ts}",
    "fix:lint": "eslint src/**/*.{js,mjs,cjs,ts} --fix",
    "fix:pack": "syncpack format",
    "prebuild": "rimraf dist",
    "release": "release-it",
    "reset": "rimraf node_modules && rimraf dist & pnpm install",
    "reset-hard": "git clean -dfx && git reset --hard && rimraf node_modules && rimraf dist && pnpm install",
    "test": "jest --reporters=default",
    "test:watch": "jest --watch --reporters=default",
    "ts-run": "node -r esbuild-register",
    "typesync": "typesync",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"yarn watch:ts\" \"yarn run watch:node\"",
    "watch:node": "nodemon build/dev/index.js",
    "watch:ts": "tsc -p tsconfig.json -w"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@faker-js/faker": "^6.1.2",
    "@pnpm/types": "^8.0.0",
    "@types/eslint": "^8.4.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.24",
    "@types/prettier": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.14.36",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.40.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "esm": "^3.2.25",
    "jest": "^27.5.1",
    "jest-html-reporters": "^3.0.6",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2",
    "redrun": "^10.0.1",
    "release-it": "^14.14.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "syncpack": "^6.2.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-toolbelt": "^9.6.0",
    "tslib": "^2.3.1",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.3",
    "typesync": "^0.9.0"
  }
}