{
  "name": "typescript-boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "guru": "./bin/run"
  },
  "engines": {
    "node": "^12.20.0 || ^14.13.1 || >=16.0.0"
  },
  "files": [
    "bin/",
    "src/",
    "dist/"
  ],
  "scripts": {
    "reset": "./scripts/reset.sh",
    "ts": "node -r esbuild-register",
    "dev": "node -r esbuild-register src/index.ts",
    "clean": "rimraf dist",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"yarn watch:ts\" \"yarn run watch:node\"",
    "watch:ts": "tsc -w",
    "watch:node": "nodemon dist/index.js",
    "prebuild": "rimraf dist",
    "build": "pnpm run transpile && pnpm run bundle",
    "transpile": "tsc --build tsconfig.build.json",
    "bundle": "esbuild ./dist/index.js --bundle --platform=node --target=node10 --format=cjs --minify --allow-overwrite --loader:.ts=ts --outfile=dist/cli.js",
    "fix": "pnpm run fix:format && pnpm run fix:lint",
    "fix:format": "prettier --write ./src/**/*.{js,mjs,cjs,ts}",
    "fix:lint": "eslint src/**/*.{js,mjs,cjs,ts} --fix",
    "fix:pack": "syncpack format",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "coverage": "jest --coverage",
    "commit": "cz",
    "publish": "np",
    "typesync": "typesync"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@faker-js/faker": "^6.1.2",
    "@pnpm/types": "^8.0.0",
    "@types/eslint": "^8.4.1",
    "@types/eslint-plugin-prettier": "^3.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/lodash": "^4.14.181",
    "@types/node": "^17.0.24",
    "@types/prettier": "^2.6.0",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.19.0",
    "auto-changelog": "^2.4.0",
    "esbuild": "^0.14.36",
    "esbuild-register": "^3.3.2",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-xo": "^0.40.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "release-it": "^14.14.2",
    "rimraf": "^3.0.2",
    "semantic-release": "^19.0.2",
    "syncpack": "^6.2.1",
    "ts-jest": "^27.1.4",
    "ts-node": "^10.7.0",
    "ts-toolbelt": "^9.6.0",
    "tslib": "^2.3.1",
    "type-fest": "^2.12.2",
    "typescript": "^4.6.3",
    "typesync": "^0.9.0"
  }
}